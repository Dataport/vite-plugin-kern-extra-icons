{
	"include": [
		"src"
	],
	"compilerOptions": {
		"outDir": "dist",
		"noImplicitAny": false,
		"importHelpers": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"declaration": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"isolatedModules": true,
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"skipLibCheck": false,
		"types": [
			"node"
		]
	}
}